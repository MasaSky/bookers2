<div class="container">
  <%= render "layouts/error_messages", book: @book %>
  <div class="row">
    <div class="col-md-3">
    <%= render "users/user_info", user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% if @books.present? %>
          <% @books.each do |book| %>
            <tr>
            <% if user_signed_in? %>
            <td><%= link_to image_tag(book.user.get_profile_image(100,100)), book.user %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            <% end %>
            </tr>
          <% end %>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>