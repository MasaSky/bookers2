<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <%= render "layouts/error_messages", book: @book %>
    <%= render "users/info", user: @user %>
    <%= render "create", book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
            <% if user_signed_in? %>
            <%= image_tag @user.get_profile_image(100,100) %><br>
            <% else %>
            <%= image_tag gravatar_for(@user, size: 100, default: :identicon) %>
            <% end %>
            <p><%= link_to @user.name, user_path(@user.id) %></p>
            </td>
            <td><%= link_to @book_id.title, book_path(@book_id.id) %></td>
            <td><%= @book_id.opinion %></td>
            <% if @user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book_id.id), class: 'btn btn-sm btn-success'%></td>
            <td><%= link_to "Destroy", book_path(@book_id.id), class: 'btn btn-sm btn-danger', method: :delete, "data-confirm" => "本当に消しますか？" %></td>
            <% else %>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>