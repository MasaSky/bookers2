<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <%= render "info", user: @user %>
    <%= render "books/post", user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @user.books.each do |book| %>
        <tr>
        <td><a href = <%= user_path(book.user.id) %> ><%= image_tag book.user.get_profile_image(100,100) %></a></td>
        <td><%= link_to book.title , book_path(book.id) %></td>
        <td><%= book.opinion %></td>
          <% if book.user == current_user %>
          <td><%= link_to "Edit", edit_book_path(book.id) , class: 'btn btn-sm btn-success'%></td>
          <td><%= link_to "Destroy", book_path(book.id) ,class: 'btn btn-sm btn-danger', method: :delete ,"data-confirm" => "本当に消しますか？" %></td>
          <% else %>
          <% end %>
        <% end %>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>